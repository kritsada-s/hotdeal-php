# AssetWise Hot Deal - Environment Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# SMTP Email Configuration
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USERNAME=your-email@assetwise.co.th
SMTP_PASSWORD=your-secure-password-here
SMTP_FROM_EMAIL=your-email@assetwise.co.th
SMTP_FROM_NAME="AssetWise Hot Deals"

# CIS API Configuration
CIS_API_URL=https://aswinno.assetwise.co.th/CISUAT/api/Customer/SaveOtherSource
CIS_API_USERNAME=your-cis-username
CIS_API_PASSWORD=your-cis-password

# Hot Deal API Configuration
HOTDEAL_API_URL=https://aswservice.com/hotdealapi
HOTDEAL_ASSETS_PATH=https://aswservice.com/hotdeal/

# Supabase Configuration (if used)
SUPABASE_URL=https://your-project.supabase.co/rest/v1/
SUPABASE_KEY=your-supabase-anon-key

# Application Configuration
BASE_URL=/hotdeal/
APP_ENV=production
DEBUG_MODE=false

# Security
SESSION_LIFETIME=7200
JWT_SECRET=your-jwt-secret-key-here